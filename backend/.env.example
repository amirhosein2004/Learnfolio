# ======================
# Django Settings
# ======================

SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost,*
DJANGO_ENV=dev  # For different environments

# ======================
# Database Settings
# ======================

DB_ENGINE=django.db.backends.postgresql
POSTGRES_DB=learnfolio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ======================
# Localization
# ======================

LANGUAGE_CODE=en-us  # Default Language
TIME_ZONE=UTC        # Default time zone
USE_I18N=True
USE_TZ=True

# ======================
# Email/SMS Settings
# ======================
# SMS Settings
KAVENEGAR_API_KEY=Your-API-Key
# Email Settings
DEFAULT_FROM_EMAIL=Example@gmail.com # Default sender email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend # Use SMTP for sending emails 
EMAIL_HOST=smtp.gmail.com # SMTP server for Gmail
EMAIL_PORT=587 # Port for TLS
EMAIL_USE_TLS=True # Use TLS for secure connection
EMAIL_HOST_USER=Example@gmail.com # Your email address
EMAIL_HOST_PASSWORD=Your-Email-Host-Password # Your email password or app password

# ======================
# REST FRAMEWORK SETTINGS
# ======================
# rate limit per
THROTTLE_RATE_USER=100/hour
THROTTLE_RATE_ANON=100/hour
THROTTLE_RATE_CUSTOM=30/minute